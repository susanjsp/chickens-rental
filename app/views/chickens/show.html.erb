
<h1><%=@chicken.name%></h1>
<% if @chicken.avatar.attached? %>
  <image src="<%= (url_for(@chicken.avatar))%>" class="avatar">
<% end %>

<ul>
  <li>Hi, my name is <%= @chicken.name %>, owned by <%= @chicken.owner.email %></li>
  <li>About me: <%= @chicken.description %></li>
  <li>Age: <%= @chicken.age %></li>
  <li>Egg size: <%= @chicken.egg_size %></li>
  <li>I am based in <%= @chicken.location %></li>
  <li>$<%= @chicken.daily_rate%> per day</li>
  <li><%= link_to "Book Me!", new_chicken_booking_path(@chicken) %>
</ul>

<% @chicken.reviews.each do |review| %>
  <%= review.content %>
<% end %>

<%= link_to "Return to all Chooks", chickens_path %>
<%= link_to "Delete #{@chicken.name}",
            chicken_path(@chicken),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
